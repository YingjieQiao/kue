<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HomePageActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="96dp"
        android:text="@string/welcome"
        android:textColor="@color/color_purple"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@drawable/homepage_bg" />

    <Button
        android:id="@+id/button_cook"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="50dp"
        android:drawableTop="@drawable/cook_logo"
        android:text="@string/button_label_cook"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_statistics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cook" />

    <Button
        android:id="@+id/button_cashier"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        android:drawableTop="@drawable/cashier_logo"
        android:text="@string/button_label_cashier"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cashier" />

    <Button
        android:id="@+id/button_statistics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="112dp"
        android:drawableTop="@drawable/stats_logo"
        android:text="@string/button_label_stats"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cook"
        tools:text="Dashboard" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="112dp"
        android:drawableTop="@drawable/settings_logo"
        android:text="@string/button_label_settings"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_statistics"
        app:layout_constraintTop_toBottomOf="@+id/button_cashier"
        tools:text="Settings" />

</androidx.constraintlayout.widget.ConstraintLayout>